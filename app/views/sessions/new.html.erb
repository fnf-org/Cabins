<% provide(:title, "Log in") %>
<div class="row mt-4">
  <div class="col-8 offset-2">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'same-line' %>
        <%= link_to "(forgot password)", password_resets_new_path %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p class="mt-4">Not registered? <%= link_to "Register now!", signup_path %></p>
  </div>
</div>
