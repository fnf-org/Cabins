<h3 class="mt-3">reservation management :: payment</h3>

<div class="row bg-white border rounded p-3">
  <div class="col">
    <%= form_for(@reservation, url: admin_reservation_paid_path(@reservation.id)) do |f| %>
        <%= render 'layouts/error_messages' %>
        <%= hidden_field(:id, @reservation.id) %>
      <div class="field">
        <%= "Accommodation: #{@reservation.accommodation.label}" %>
      </div>
      <div class="field">
        <%= "User: #{@reservation.user.name}" %>
      </div>
      <div class="field">
        <%= "Total Price: #{@reservation.price}" %>
      </div>
      <div class="field">
        <%= f.label :payment_amount %><br>
        <%= f.number_field :payment_amount, :step => 0.01, :class => 'form control' %>
      </div>
      <div class="field">
        <%= f.label :payment_types %><br>
        <%= f.collection_select :payment_types_id, PaymentType.all, :id, :label%>
      </div>
      <div class="actions">
        <%= f.submit "Mark Paid", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>