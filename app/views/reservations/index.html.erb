<h3 class="mt-3">reservation management</h3>

<nav class="navbar navbar-expand-lg navbar-light bg-light border rounded">
  <a class="navbar-brand" href="#">Search</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSearchContent" aria-controls="navbarSearchContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSearchContent">
      <ul class="navbar-nav mr-auto">
        <%= form_tag admin_reservations_path, :style => 'width 100%;', :class => "form-inline", :remote => true, :method => 'get', :id => 'reservations_search' do %>
          <%= text_field_tag :search, params[:search], class: 'form-control form-control-sm ' %>
          <%= hidden_field_tag :direction, params[:direction] %>
          <%= hidden_field_tag :sort, params[:sort] %>
          <%= submit_tag "go", :name => nil, :class => 'btn btn-primary btn-sm ml-2' %>
        <% end %>
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">sort...</a>
          <div class="dropdown-menu">
            <%= sortable 'user', 'a-z', 'asc' %>
            <%= sortable 'user', 'z-a', 'desc' %>
            <%= sortable 'accommodation', 'a-z', 'asc' %>
            <%= sortable 'accommodation', 'z-a', 'desc' %>
            <%= sortable 'quantity', 'asc', 'asc' %>
            <%= sortable 'quantity', 'desc', 'desc' %>
            <%= sortable 'price', 'asc', 'asc' %>
            <%= sortable 'price', 'desc', 'desc' %>
            <%= sortable 'paid_date', 'asc', 'asc' %>
            <%= sortable 'paid_date', 'desc', 'desc' %>
          </div>
        </li>
      </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav><!-- end search nav -->

<div id="reservations" class="contentcolumn mt-3">
  <%= render 'reservations' %>
</div><!-- end content column-->