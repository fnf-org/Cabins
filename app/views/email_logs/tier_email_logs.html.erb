<div class="titlewrapper mt-3">
  <div class="admintitle"><h3>Tier Email Logs</h3></div>
</div>
<table class="table table-hover table-condensed admintable">
  <thead>
  <tr>
    <th>
      Date
    </th>
    <th>
      User
    </th>
    <th>
      Tier
    </th>
  </tr>
  </thead>
  <tbody>
  <% @logs.each do |l| %>
    <tr data-item-id=<%= "#{l.id}" %> class="item">
      <td>
        <%= l.created_at.strftime('%A, %B %e @ %l:%M%p') %>
      </td>
      <td>
        <%= l.user.name %>: <%= l.user.email %>
      </td>
      <td>
        <%= l.tier.label %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
