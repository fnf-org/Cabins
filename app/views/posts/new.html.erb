<div class="row">
  <h3>Creating a new <%= @category %> post</h3>
</div>
<div class="row justify-content-md-center">
  <div class="col-md-10">
    <%= form_for(@post) do |f| %>
        <%= render 'layouts/error_messages' %>
        <%= hidden_field(:post, :category) %>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_area :title, :class => 'tinymce' %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: 'tinymce' %>
      </div>
      <div class="field">
        <%= f.label :display_order, class: 'same-line' %>
        <%= f.number_field :display_order, :value => 50%>
        sorted from top to bottom, lowest to highest
      </div>
      <div class="actions">
        <%= f.submit "Create", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<%= tinymce %>