<div class="row justify-content-md-center">
  <div class="col-md-10">
    <%= form_for(@post) do |f| %>
        <%= render 'layouts/error_messages' %>
        <%= hidden_field(:post, :category) %>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_area :title, :class => 'tinymce' %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, :class => 'tinymce' %>
      </div>
        <div class="field">
          <%= f.label :sticky, class: 'same-line' %>
          <%= f.check_box :sticky %>
        </div>
      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<%= tinymce %>